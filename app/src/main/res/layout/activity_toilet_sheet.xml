<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_sheet" />


    <include layout="@layout/bottom_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/scroll_toolbar"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar_sheet"
    android:layout_above="@id/scroll_toolbar" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#eaeaea"
        android:orientation="vertical"
        tools:context="fr.handipressante.app.ToiletSheetActivity">

        <!-- Toilet presentation block-->
        <RelativeLayout
            android:id="@+id/presentation_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/background_shadow">

            <ImageView
                android:id="@+id/handicapped"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/global_rate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/handicapped" />

            <TextView
                android:id="@+id/toilet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:layout_toRightOf="@id/handicapped"
                android:layout_toEndOf="@id/handicapped"
                android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/map_button"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/navigation_icon"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/toilet_name" />

            <ImageButton
                android:enabled="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/photo_button"
                android:src="@drawable/icon_addpic"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignTop="@id/map_button"
                android:layout_toLeftOf="@id/map_button"
                android:layout_toStartOf="@id/map_button" />

            <Button
                android:enabled="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/edit_toilet"
                android:background="@drawable/edit_text_button"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignTop="@id/photo_button"
                android:layout_toLeftOf="@id/photo_button"
                android:layout_toStartOf="@id/photo_button" />

        </RelativeLayout>

        <!-- Toilet pictures block-->
        <RelativeLayout
            android:id="@+id/pics_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shadow"
            android:layout_marginTop="15dp">

            <!--ajout tests -->

            <ImageView
                android:id="@+id/previous"
                android:layout_width="168dp"
                android:layout_height="40dp"
                android:src="@drawable/precedent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="168dp"
                android:layout_height="40dp"
                android:src="@drawable/suivant"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_below="@+id/previous" />
            <!--
            <ImageView
                android:id="@+id/picture_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="bottom"/>
                -->
        </RelativeLayout>



        <!-- Toilet description block-->

        <RelativeLayout
            android:id="@+id/description_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/background_shadow">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="44dp"
                android:src="@drawable/description_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/edit_description"
                android:enabled="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/edit_text_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/toilet_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:fontFamily="sans-serif-medium"
                android:textSize="13sp"
                android:layout_below="@id/edit_description" />

        </RelativeLayout>


        <!-- Toilet rate block-->
        <RelativeLayout
            android:id="@+id/rate_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/background_shadow">

            <!-- NAME of toilet rate block-->

            <ImageView
                android:id="@+id/rate_title"
                android:layout_width="208dp"
                android:layout_height="44dp"
                android:src="@drawable/rate_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/edit_rate"
                android:enabled="false"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:background="@drawable/edit_rate_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <!-- -->

            <!-- Criteria names -->
            <TextView
                android:id="@+id/accessibility_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/rate_title"
                android:fontFamily="sans-serif-medium"
                android:text="AccessibilitÃ© du lieu"
                android:textColor="#be3733"/>

            <TextView
                android:id="@+id/cleanliness_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/accessibility_label"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cleanliness"
                android:textColor="#be3733" />

            <TextView
                android:id="@+id/facilities_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/cleanliness_label"
                android:fontFamily="sans-serif-medium"
                android:text="@string/facilities"
                android:textColor="#be3733"/>


            <!-- Criteria rates -->
            <ImageView
                android:id="@+id/accessibility_rate"
                android:layout_width="75dp"
                android:layout_height="16dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/accessibility_label"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/cleanliness_rate"
                android:layout_width="75dp"
                android:layout_height="16dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/cleanliness_label"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/facilities_rate"
                android:layout_width="75dp"
                android:layout_height="16dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/facilities_label"
                android:scaleType="fitStart" />

        </RelativeLayout>


        <!-- Toilet comment block-->
        <RelativeLayout
            android:id="@+id/comment_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/background_shadow">


            <ImageView
                android:layout_width="187dp"
                android:layout_height="44dp"
                android:src="@drawable/comment_title" />

            <Button
                android:id="@+id/add_comment"
                android:enabled="false"
                android:layout_width="56dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/add_comment_button" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/comments_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_comment" />

                <!-- IMPORTANT : LOOK OF THE COMMENT BUBBLE -->
                <!--<LinearLayout
                    android:id="@+id/one_comment_block"
