<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:baselineAligned="false">
    <!--must be keeped -->
    <ImageView android:id="@+id/bubble_image"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_marginLeft="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_title"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_description"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_subdescription"
        android:visibility="gone"/>
    <!-- -->

    <!-- custom -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_rate_stars"
        android:id="@+id/rank"
        android:layout_toLeftOf="@+id/charged"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="2dp" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/charged"
        android:src="@drawable/ic_euro_symbol_red"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bubble_fiche"
        android:layout_alignParentLeft="false"
        android:layout_above="@+id/bubble_fiche" />
    <ImageButton android:id="@+id/bubble_fiche"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_below="@id/rank"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/fiche"
        android:padding="2dp" />

    <ImageButton
        android:id="@+id/bubble_itinerary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/itineraire"

        android:layout_alignParentTop="false"
        android:layout_toEndOf="@+id/bubble_fiche"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:padding="2dp"
        android:layout_alignBottom="@+id/bubble_fiche"
        android:layout_toRightOf="@+id/bubble_fiche" />


</RelativeLayout>